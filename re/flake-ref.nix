let

  flake_id_p = "[a-zA-Z][a-zA-Z0-9_-]*";

in {

  inherit flake_id_p;

  path_ref_p = "(path:)?([^:?]*)(\\?(.*))?";
  git_ref_p  = "(git(\\+(https?|ssh|git|file))?):(//[^/]+)?(/[^?]+)(\\?(.*))?";

  indirect_ref_p = "(flake:)?(${flake_id_p})(/([^?]+))?(\\?(.*))?";
  github_ref_p   = "github:([^/]+)/([^/?]+)(/[^?]+)?(\\?(.*))?";


}


