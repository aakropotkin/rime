#! /usr/bin/env bash
# ============================================================================ #

set -eu;

# Tools
: "${NIX:=nix}";
: "${MKTEMP:=mktemp}";
: "${GIT:=git}";
: "${JQ:=jq}";

# Vars
TDIR="$( $MKTEMP -d; )";

: "${FLAKE:=false}";
: "${TYPE:=tarball}";
: "${URL:=}";
: "${VERBOSE:=}";
: "${FALLBACK_TO_FILE:=}";


# ---------------------------------------------------------------------------- #

while test "$#" -gt 0; do
  case "$1" in
    -f|--flake)    FLAKE=true; ;;
    -F|--no-flake) FLAKE=false; ;;
    -t|--type)     TYPE="$2"; shift; ;;
    -K|--fallback) FALLBACK_TO_FILE=:; ;;
    -V|--verbose)  VERBOSE=:; ;;
    -*) 
      echo "Unrecognized arg: $*" >&2;
      exit 1;
    ;;
    *) 
      if test -z "${URL:-}"; then
        URL="$1";
      else
        echo "Unrecognized arg: $*" >&2;
        exit 1;
      fi
    ;;
  esac
  shift;
done


# ---------------------------------------------------------------------------- #

# Cleanup Routine

_es=0;
trap '
_es="$?";
if test "$_es" -ne 0; then
  echo "ERROR: $_ ($_es)" >&2;
fi
cd -;
rm -rf "$TDIR";
exit "$_es";
' HUP TERM INT QUIT;


# ---------------------------------------------------------------------------- #


# ---------------------------------------------------------------------------- #

# Make a phony `flake.nix'.

cd "$TDIR";
gen_flake() {
{
  cat <<EOF
{
  inputs.x.url   = "$URL";
  inputs.x.flake = ${FLAKE:-false};
  inputs.x.type  = "$TYPE";
  outputs = _: {};
}
EOF
} > flake.nix;
}


# ---------------------------------------------------------------------------- #

# Use it to dump `fetchTree' args from the generated `flake.lock'.

lookup() {
  gen_flake;
  $GIT init 1>&2;
  $GIT add flake.nix;
  $NIX --extra-experimental-features 'nix-command flakes' flake lock;
  $JQ '.nodes.x.locked' ./flake.lock;
}

lookup_logged() {
  if test -n "${VERBOSE:-}"; then
    lookup;
  else
    lookup 2>/dev/null;
  fi
}

lookup_fb() {
  if ! lookup_logged; then
    if test -n "${VERBOSE:-}"; then
      echo "Tarball fetching failed. Trying file" >&2;
    fi
    TYPE='file';
    gen_flake;
    lookup_logged;
  fi
}


# ---------------------------------------------------------------------------- #

if test "$TYPE" = tarball && test -n "${FALLBACK_TO_FILE:+y}"; then
  lookup_fb;
else
  lookup_logged;
fi


# ---------------------------------------------------------------------------- #
#
#
#
# ============================================================================ #
